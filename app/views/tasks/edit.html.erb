<h1>Edit task</h1>

<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control' %>
  </div>

  <br>

  <% unless f.object.new_record? %>
    <div class="checkbox">
      <label>
        <%= f.check_box :completed %> Completed
      </label>
    </div>
  <% end %>

  <br>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<hr>

<div class="back-link">
  <%= link_to tasks_path do %>
    <i class="fa-solid fa-clock-rotate-left"></i> Back to list
  <% end %>
</div>
